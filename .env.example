# ======================
# Supabase Configuration
# ======================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ======================
# Email Configuration (Resend)
# ======================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@rabbitforms.com

# ======================
# CAPTCHA Configuration (Cloudflare Turnstile)
# ======================
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Alternative: Google reCAPTCHA
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ======================
# App Configuration
# ======================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Rabbit Forms
NEXT_PUBLIC_APP_DESCRIPTION=Complete Form Builder SaaS Solution

# ======================
# Security & Encryption
# ======================
# Generate a random 32-byte hex string for API key encryption
# Example: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Session secret (for NextAuth if needed in future)
NEXTAUTH_SECRET=your-nextauth-secret-here

# ======================
# Analytics (Optional)
# ======================
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ======================
# Development Settings
# ======================
NODE_ENV=development
